// shared styles
@import '../../node_modules/nib'
@import 'libs/mixins'
@import 'libs/typography'
@import 'libs/grid'
@import 'libs/base'
@import 'snippets/hero'
@import 'snippets/about'
@import 'snippets/clients'
@import 'snippets/sections'
@import 'snippets/contact'
@import 'snippets/footer'

main
  max-width 100vw
  display grid
  grid-template-columns 1fr

  +tablet-portrait-up()
    grid-template-columns 48.5119047619vw vw-calc(50) 48.5119047619vw

  .left
  .right
    position relative
    max-width 100vw

    +tablet-portrait-up()
      min-height 100vh
  
  .right
    background-color $offwhite

  .clients
    z-index 100

    +tablet-portrait-up()
      height 100vh
  
  h2, p, ul, button
    font-size vw-calc(108)
    font-family fav
    font-weight 400

    +tablet-portrait-up()
      font-size vw-calc(34)

  h2, button
    font-weight normal
    text-transform uppercase