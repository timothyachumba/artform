@font-face 
  font-family favorit
  src url("../fonts/fr.woff2") format('woff2'),
      url("../fonts/fr.woff") format('woff'),
      url("../fonts/fr.ttf") format('truetype')
  font-weight 400
  font-style normal
  font-display swap

